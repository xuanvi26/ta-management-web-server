<html>
    <% var errors %>
    <%- include("../../partials/dashboard/ta&prof_dashboard.ejs") %>
    <body>
        <main role="main">
            <section class="jumbotron text-center">
				<div class="container">
					<h1 class="jumbotron-heading">Rate a TA</h1>
			</section>
            <form
                class="container single-page-form-container border border-primary rounded"
                action="ta-rating/add-ta-rating"
                method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="courseName">Course Name</label>
                        <input
                            class="form-control"
                            id="courseName"
                            placeholder="Course name (required, e.g.:COMP 307)"
                            name="someCourseName"
                        />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="courseTY">Term and Year</label>
                        <input
                            class="form-control"
                            id="courseTY"
                            placeholder="Term and year (required, e.g.: Winter 2022)"
                            name="someCourseTY"
                        />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="starRating">Give a rating </label> </br>
                        <input type="radio" id="starRating" name="starRating" value="1">  1 &nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="radio" id="starRating" name="starRating" value="2"> &nbsp; 2 &nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="radio" id="starRating" name="starRating" value="3"> &nbsp; 3 &nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="radio" id="starRating" name="starRating" value="4"> &nbsp; 4 &nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="radio" id="starRating" name="starRating" value="5"> &nbsp; 5 &nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="comment">Comment</label>
                        <input
                            class="form-control"
                            id="comment"
                            placeholder="Leave a comment (optional)"
                            name="someComment"
                        />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            Submit
                        </button>
                    </div>
                </div>
                <% if(errors && errors[0]) { %>
                    <div
                        class="alert alert-danger alert-dismissible fade show"
                        role="alert"
                    >
                        <strong>Invalid Registration: </strong><%= errors[0] %>. Please
                        try again.
                        <button
                            type="button"
                            class="close"
                            data-dismiss="alert"
                            aria-label="Close"
                        >
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <% } %>
            </form>
        </main>
    </body>
</html>