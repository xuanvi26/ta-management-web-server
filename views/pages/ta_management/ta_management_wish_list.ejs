<html>
    <%- include('../../partials/authenticated_navbar.ejs') %>
    <% var errors; %>
    <body>
        <div class="main-body-container">
            <h3 class="text-center">TA wish list</h3>
            <p class="text-center">Identify to the TA administrator which TA you would like to have next semester</p>
            <form 
                class= "container single-page-form-container border border-primary rounded"
                action="/ta-management/add-wish-list"
                method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="termMY">Term Month and Year</label>
						<input
							class="form-control"
							id="termMY"
							placeholder="Term Month and Year (required, e.g.: Winter 2022)"
							name="termMonthYear"
						/>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="courseName">Course (cannot edit)</label>
						<input
							class="form-control"
							id="courseName"
							placeholder= "<%= `${course}` %>"
							name="courseName"
                            value="<%= `${course}` %>"
                            readonly
						/>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="profFirstName">Your first name (prof)</label>
						<input
							class="form-control"
							id="profFirstName"
							placeholder="First Name (required)"
							name="profFN"
						/>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="profLastName">Your last name (prof)</label>
						<input
							class="form-control"
							id="profLastName"
							placeholder="Last Name (required)"
							name="profLN"
						/>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="taFirstName">TA's first name</label>
						<input
							class="form-control"
							id="taFirstName"
							placeholder="First Name (required)"
							name="taFN"
						/>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="taLastName">TA's last name</label>
						<input
							class="form-control"
							id="taLastName"
							placeholder="Last Name (required)"
							name="taLN"
						/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            Submit
                        </button>
                    </div>
                </div>
                <% if(errors && errors[0]) { %>
                    <div
                        class="alert alert-danger alert-dismissible fade show"
                        role="alert"
                    >
                        <strong>Invalid: </strong><%= errors[0] %>. Please
                        try again.
                        <button
                            type="button"
                            class="close"
                            data-dismiss="alert"
                            aria-label="Close"
                        >
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <% } %>
            </form> 
        </div>
    </body>
</html>