<html>
    <% var successMsg; var errorMsg; %>
    <% if(userTypes.includes('sysop')) { %>
		<%- include('../../partials/dashboard/sysop_dashboard.ejs') %> 
	<% } else if(userTypes.includes('admin')) { %> 
		<%- include('../../partials/dashboard/admin_dashboard.ejs') %> 
	<% } else if(userTypes.includes('prof')) { %> 
		<%- include('../../partials/dashboard/ta&prof_dashboard.ejs') %> 
	<% } else if(userTypes.includes('ta')) { %> 
		<%- include('../../partials/dashboard/ta&prof_dashboard.ejs') %> 
    <% } %>
    <body>
        <main role="main">
			<section class="jumbotron text-center">
				<div class="container">
					<h1 class="jumbotron-heading">TA Management</h1>
			</section>
            <% if(successMsg) { %>
                <div
                    class="alert alert-success alert-dismissible fade show container"
                    role="alert"
                >
                    <strong>Success!</strong><%= ` ${successMsg}` %>
                    <button
                        type="button"
                        class="close"
                        data-dismiss="alert"
                        aria-label="Close"
                    >
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% } %>
                <% if(errorMsg) { %>
                    <div
                        class="alert alert-danger alert-dismissible fade show container"
                        role="alert"
                    >
                        <strong>Operation failed.</strong><%= ` ${errorMsg}` %>
                        <button
                            type="button"
                            class="close"
                            data-dismiss="alert"
                            aria-label="Close"
                        >
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <% } %>
                    <div class="album py-5 bg-light">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="card mb-4 shadow-sm">
                                        <a href="/ta-management/course-search">
                                            <img
                                            class="card-img-top"
                                            data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail"
                                            alt="Thumbnail [100%x225]"
                                            style="
                                                height: 225px;
                                                width: 100%;
                                                display: block;
                                                padding: 1.5vw;
                                            "
                                            src="../../images/menu-button-wide.svg"
                                            data-holder-rendered="true"
                                            />
                                        </a>
                                        <div class="card-body">
                                            <p class="card-text">
                                                <a href="/ta-management/course-search" style="color:#212529">
                                                Choose a course.
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
        </main>
    </body>
</html>