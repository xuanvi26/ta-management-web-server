<html>
    <%- include('../../partials/authenticated_navbar.ejs') %>
    <% var error; %>
    <body>
        <div class="main-body-container">
            <h3 class="text-center">Choose a course</h3>
            <p class="text-center">Please choose a course to manage TAs in</p>
            <form 
                class="form-inline" 
                style="margin-top:2vw" 
                method="GET" 
                action="/ta-management/courses">
                <input 
                    name="course_name_search"
                    class="form-control mr-sm-2"
					style="width: 90%"
					type="search"
					placeholder="Search for a course (e.g.: COMP 307)"
					aria-label="Search"/>
                <button 
                    class="btn btn-outline-secondary my-2 my-sm-0"
                    type="submit"
                > Search 
                </button>
            </form>
            <% if(error) { %>
                <div
                    class="container alert alert-danger alert-dismissible fade show"
                    role="alert"
                >
                    <strong><%= error %></strong>
                    <button
                        type="button"
                        class="close"
                        data-dismiss="alert"
                        aria-label="Close"
                    >
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% } %>
        </div>
    </body>
</html>