<html>
	<%- include('../../partials/dashboard/sysop_dashboard.ejs') %> <% var error;
	%>

	<body>
		<div class="main-body-container">
			<h3 class="text-center">Search a user</h3>
			<form class="form-inline" style="margin-top:2vw" method="GET" action="/account/users">
				<input
					name="search_term"
					class="form-control mr-sm-2"
					style="width: 90%"
					type="search"
					placeholder="Search for a user by typing in any single field (e.g.: first name, last name, McGill ID, all registered courses, etc.)"
					aria-label="Search"
				/>
				<button
					class="btn btn-outline-secondary my-2 my-sm-0"
					type="submit"
				>
					Search
				</button>
			</form>
			<% if(error) { %>
			<div
				class="container alert alert-danger alert-dismissible fade show"
				role="alert"
			>
				<strong><%= error %></strong>
				<button
					type="button"
					class="close"
					data-dismiss="alert"
					aria-label="Close"
				>
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<% } %>
		</div>
	</body>
</html>
